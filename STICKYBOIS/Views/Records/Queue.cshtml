@model IEnumerable<STICKYBOIS.Models.Record>

@{
    ViewBag.Title = "Queue";
}

<h2>@ViewBag.Message</h2>

<p>
    @Html.ActionLink("Get In Line", "GetInLine")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Thrower)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.StartTime == null)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Thrower)
                </td>
                <td>
                    @Html.ActionLink("Throw", "EditRecord", new { id = item.id }) |
                    @Html.ActionLink("Edit", "EditQueue", new { id = item.id }) |
                    @Html.ActionLink("Delete", "DeleteQueue", new { id = item.id })
                </td>
            </tr>
        }
    }

</table>
